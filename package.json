{
  "name": "auction-video-player",
  "version": "1.0.1",
  "description": "Desktop app for playing auction lot videos automatically",
  "author": "Auction Video Player <info@example.com>",
  "main": "electron/main.cjs",
  "type": "module",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "build-win": "npm run build && electron-builder --win",
    "build-win-simple": "npm run build && electron-builder --win --config.forceCodeSigning=false",
    "build-mac": "npm run build && electron-builder --mac",
    "build-linux": "npm run build && electron-builder --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "puppeteer": "^22.12.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ironbound.auction-video-player",
    "productName": "Auction Video Player",
    "publish": {
      "provider": "github",
      "owner": "ironboundauctions",
      "repo": "auction-video-player"
    },
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/puppeteer/**/*",
      "node_modules/@puppeteer/**/*",
      "node_modules/puppeteer-core/**/*",
      "node_modules/puppeteer/.local-chromium/**/*",
      "node_modules/puppeteer-core/.local-chromium/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publisherName": "Ironbound Auctions",
      "certificateFile": null,
      "certificatePassword": null
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "identity": null,
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "compression": "normal",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": false
    }
  }
}
